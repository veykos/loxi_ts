{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "recommended": true
            },
            "correctness": {
                "recommended": true
            },
            "suspicious": {
